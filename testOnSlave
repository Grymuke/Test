pipeline {
	agent {label 'SlaveServer'
  }
    stages {
        stage('Unzip') {
            steps {
	    	sh 'whoami'
                echo 'Unzip file....'
                sh 'java -version'
                sh 'pwd'
		//bothdir_name=$parentdir_name $stamdir_name
		sh '''
		    stamdir_name=$(date +%Y%m%d_%H%M%S)
                    parentdir_name='installedPackages/'
		    bothdir_name=$parentdir_name $stamdir_name
		    	    

                    if [ ! -d $bothdir_name ]
                    then
                        mkdir $bothdir_name
                    else
                        echo "Directory already exists"
                    fi
		'''
		
		sh '''
		install="test"
		if [ ! -d $install ];
                    then
		        mkdir test
                    else
                        echo "Directory already exists"			
                fi
		'''
		//echo 'making dir "$stampdir_name"'
		
		
		dir ("test") {
		sh'''
		
		    stampdir_name=$(date +%Y%m%d_%H%M%S)
		    
		    mkdir $stampdir_name
		    cp /home/artem/slaveTest/workspace/TestOnSlave/unzip.txt /home/artem/slaveTest/workspace/TestOnSlave/test/$stampdir_name
		'''
    		}
		
		
            }
        }
    }
    //post {
	//always {
		//cleanWs()
		//}
	//}
}
